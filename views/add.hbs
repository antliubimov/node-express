<h1>Add new course</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required>
        <label for="title">A Name of a course</label>
        <span class="helper-text" data-error="Enter a name"></span>
    </div>
    <div class="input-field">
        <input name="price" id="price" type="number" class="validate" required min="1 ">
        <label for="price">A price of a course</label>
        <span class="helper-text" data-error="Enter a price"></span>
    </div>
    <div class="input-field">
        <input name="img" id="img" type="text" class="validate" required>
        <label for="img">URL of an image</label>
        <span class="helper-text" data-error="Enter an image url"></span>
    </div>

    <button class="btn btn-primary">Add a course</button>
</form>